{
  "manifest_version": 2,
  "name": "Savory",
  "version": "0.8.0",
  "description": "Save your tabs and links in Savory from your Chrome browser quickly",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["https://*.getsavory.co/*", "https://*.savory.test/*"]
  },
  "browser_action": {},
  "permissions": [
    "bookmarks",
    "cookies",
    "https://*.savory.test/",
    "https://*.getsavory.co/"
  ]
}
